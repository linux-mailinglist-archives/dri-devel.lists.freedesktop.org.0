@@ -136,5 +136,7 @@ struct drm_connector *dp_drm_connector_init(struct msm_dp *dp_display)
 
 	drm_connector_attach_encoder(connector, dp_display->encoder);
 
+	drm_helper_move_panel_connectors_to_head(dp_display->drm_dev);
+
 	return connector;
 }
